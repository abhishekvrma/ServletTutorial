<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.1">

    <!--servlet declaration--> 
    <servlet>
        <servlet-name>first</servlet-name>
        <servlet-class>com.servelet.FirstServelet</servlet-class>
          <servlet-name>second</servlet-name>
        <servlet-class> com.servelet.SecondServelet</servlet-class>
        <servlet-name>third</servlet-name>
        <servlet-class>com.servelet.ThirdServlet</servlet-class>
        <servlet-name>fourth</servlet-name>
        <servlet-class>com.servelet.FourthServelet</servlet-class>
    </servlet>
  
    <!--mapping-->
    
    <servlet-mapping> 
        <servlet-name>first</servlet-name>
        <url-pattern>/first</url-pattern>
        <servlet-name>second</servlet-name>
        <url-pattern>/second</url-pattern>
        <servlet-name>third</servlet-name>
        <url-pattern>/third</url-pattern>
        <servlet-name>fourth</servlet-name>
        <url-pattern>/fourth</url-pattern>
    </servlet-mapping>
    
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
